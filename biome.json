{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": { "enabled": true },
	"files": {
		"ignore": ["./dist", "./coverage"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"useImportExtensions": "error"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
